{
	"manifest_version": 2,
	"name": "Readability",
	"version": "1.0",
	"permissions": [
		"tabs",
		"https://www.readability.com/api/rest/v1"
	],
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"background": {
		"scripts" : [
			"oauth.js",
			"oauth_wrapper.js",
			"background.js"
		]
	},
	"chrome_url_overrides" : {
    	"newtab": "newtab.html"
  	}
}
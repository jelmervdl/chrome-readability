{
	"manifest_version": 2,
	"name": "Readability",
	"version": "1.0",
	"permissions": [
		"tabs",
		"https://www.readability.com/api/rest/v1"
	],
	"background": {
		"scripts" : [
			"oauth.js",
			"oauth_wrapper.js",
			"background.js"
		]
	},
	"chrome_url_overrides" : {
    	"newtab": "newtab.html"
  	}
}